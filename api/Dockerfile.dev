FROM node:18-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci --only=production

# Copy source code (only what's needed for simple-server.js)
COPY simple-server.js ./
COPY src/ ./src/
COPY types/ ./types/

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev"]