FROM node:18-alpine

WORKDIR /app

# Install dependencies (including dev dependencies for ts-node-dev)
COPY package*.json ./
RUN npm ci

# Copy source code
COPY tsconfig.json ./
COPY index.ts ./
COPY src/ ./src/
COPY types/ ./types/

# Expose port
EXPOSE 3001

# Start development server
CMD ["npm", "run", "dev"]